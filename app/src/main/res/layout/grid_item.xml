<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ImageViewG"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/favoriteViewG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/ImageViewG"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|left"
        app:srcCompat="@android:drawable/star_big_off" />

    <ImageView
        android:id="@+id/deleteViewG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/ImageViewG"
        android:layout_alignParentTop="true"
        android:layout_gravity="top|right"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/likeViewG"
        android:layout_width="26dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ImageViewG"
        app:srcCompat="@android:drawable/presence_invisible" />

    <TextView
        android:id="@+id/txtTitleG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageViewG"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Title"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp" />

</RelativeLayout>