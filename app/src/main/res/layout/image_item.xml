<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ImageViewI"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/favoriteViewI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ImageViewI"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/star_big_off" />

    <ImageView
        android:id="@+id/deleteViewI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ImageViewI"
        android:layout_alignTop="@+id/ImageViewI"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <ImageView
        android:id="@+id/likeViewI"
        android:layout_width="30dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ImageViewI"
        app:srcCompat="@android:drawable/presence_invisible" />


</RelativeLayout>